# POST
VERBOSE
# DEFINE MY_INTERVAL 1
# equation of state ..

# register a single scalar that blows in ..
REGISTER_SCALAR CT
CT.SC_LAM = 1
CT.SC_T = 1

# also register a residence time scalar
# REGISTER_SCALAR RES_TIME
# INIT RES_TIME 0.0

# set the initial condition
# INIT u=1 0 0 p=0.0
# INIT u=19.0 0 0 p=0.0 CT 0.5
# INIT CT 0.5
# INIT time=0 step=0

RESTART ./mesh.mles
# INTERP_FROM_RESTART ./result.sles
INTERP_FROM_RESTART ./output/update/Sc_0.7/output/result/RES.00010000.sles

# set the time stepping
TIMESTEP DT 0.001
# TIMESTEP CFL 1.2
NSTEPS 1
CHECK_INTERVAL 1

EOS HELMHOLTZ
SGS_MODEL VREMAN 
# RHO 1.225
# MU 1.789e-5
# HELMHOLTZ_SOS 340
RHO 1.0
MU (1.0/395.0)
HELMHOLTZ_SOS 200

# boundary conditions 
y0 WALL CT 0.0
y1 WALL CT 1.0

WRITE IMAGE INTERVAL=1 NAME post/U_mean GEOM Z_PLANE_FRAC 0.5 VAR comp(u_avg,0)
WRITE IMAGE INTERVAL=1 NAME post/U_mean GEOM Z_PLANE_FRAC 0.5 VAR comp(u_avg,0)
WRITE IMAGE INTERVAL=1 NAME post/U_rms GEOM Z_PLANE_FRAC 0.5 VAR comp(u_rms,0)
WRITE IMAGE INTERVAL=1 NAME post/V_rms GEOM Z_PLANE_FRAC 0.5 VAR comp(u_rms,1)
WRITE IMAGE INTERVAL=1 NAME post/W_rms GEOM Z_PLANE_FRAC 0.5 VAR comp(u_rms,2)

INTERACTIVE
