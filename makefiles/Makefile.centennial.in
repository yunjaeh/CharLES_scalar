# Makefile.centennial.in
#
# module list: 
#   1) compiler/intel/2017.1.132   2) mpi/sgimpt/2.15             3) Master

# Archiving commands to create, index, and extract
AR = ar rv
RANLIB = ar -ts
EXTRACT = ar -x

# libpng...
PNG_LIB = -lpng -lz

# parallel compiler
CXX = mpicxx
CXXFLAGS = -O3 -g -DCTI_VERBOSE3 -DWITH_SHM -Wno-write-strings -DWITH_PNG 
CLIBS +=  $(PNG_LIB) -lrt

# for serial tools 
CXX_NO_MPI=	g++
CXXFLAGS_NO_MPI= -O3 -g $(PNG_INC) -DWITH_PNG
CLIBS_NO_MPI= $(PNG_LIB)

